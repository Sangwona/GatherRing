option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: GatherRing.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: GatherRing.settings
container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py makemigrations && python3 manage.py migrate"
    leader_only: true
  02_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --noinput"
    leader_only: true
  03_createsu:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py createsuperuser --username admin --email admin@example.com --noinput"
    leader_only: true
